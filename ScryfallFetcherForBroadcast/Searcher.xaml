<Window x:Class="ScryfallFetcherForBroadcast.Searcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScryfallFetcherForBroadcast"
        mc:Ignorable="d"
        Title="Searcher" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Initialized="Window_Initialized" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="Keyword" HorizontalAlignment="Left" TextWrapping="Wrap" Text="진화하는 야생지" VerticalAlignment="Top" Width="390" FontSize="16" KeyDown="Keyword_KeyDown"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="505,0,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="SearchButton_Click"/>
        <Button x:Name="ViewOpenButton" Content="Show CardView" Width="150" FontSize="16" HorizontalAlignment="Left" Margin="585,0,0,0" Click="ViewOpenButton_Click"/>
        <Label x:Name="SearchStatus" Content="준비중" HorizontalAlignment="Left" Margin="395,0,0,0" VerticalAlignment="Center" Width="105" FontWeight="Bold" Height="23" FontSize="16" Padding="0,0,0,0" HorizontalContentAlignment="Right"/>

    </Grid>
</Window>
